{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "rootDir": "client/src",
    "outDir": "dist/public/assets",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2020"],
    "typeRoots": ["client/src/types"],
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": false
  },
  "include": ["client/src/**/*"],
  "exclude": ["dist", "server"]
}

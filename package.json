{
  "name": "streaman",
  "version": "0.1.0",
  "private": true,
  "description": "Local-only desktop app for managing livestreams and short-form publishing",
  "main": "dist/electron/main.js",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:main": "cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true electron -r ts-node/register/transpile-only electron/main.ts",
    "dev:renderer": "cd renderer && vite",
    "build:renderer": "cd renderer && vite build",
    "build:backend": "tsc -p tsconfig.json",
    "build": "npm run build:backend && npm run build:renderer",
    "start": "cross-env NODE_ENV=production electron dist/electron/main.js",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "concurrently": "^9.0.0",
    "electron": "^30.0.0",
    "electron-store": "^9.0.0",
    "node-cron": "^3.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "prisma": "^5.18.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.8"
  },
  "prisma": {
    "schema": "backend/db/prisma.schema"
  },
  "build": {
    "appId": "com.streaman.app",
    "productName": "streaman",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "renderer/dist/**/*",
      "streaman.db",
      "package.json"
    ],
    "extraMetadata": {
      "main": "dist/electron/main.js"
    }
  }
}

{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@electron/*": ["electron/*"]
    }
  },
  "include": ["electron/**/*.ts", "backend/**/*.ts"],
  "exclude": ["renderer", "node_modules", "dist"]
}

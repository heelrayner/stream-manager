{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "electron",
    "outDir": "dist/electron",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "typeRoots": ["./electron/types", "./server/types"],
    "noEmitOnError": false
  },
  "include": ["electron/**/*"],
  "exclude": ["dist", "server", "client"]
}

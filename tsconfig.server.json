{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "server/src",
    "outDir": "dist/server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [],
    "typeRoots": ["server/types"],
    "lib": ["ES2022"],
    "noEmitOnError": false
  },
  "include": ["server/src/**/*", "server/types/**/*.d.ts"],
  "exclude": ["dist", "client"]
}
